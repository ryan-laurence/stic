<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap>
	
	<insert id="addUserAccessSql" parameterClass="java.util.Map">
		INSERT INTO `user_access` (user_id, role_id)
			VALUES (#user_id#, #role_id#)
	</insert>

	<update id="updateUserAccessSql" parameterClass="java.util.Map">
		UPDATE `user_access` SET 
			user_id = #user_id#,
			role_id	= #role_id#
		WHERE
			ua_id = #ua_id#
	</update>
	
	<update id="updateUserAccessIsDeletedSql" parameterClass="java.util.Map">
		UPDATE `user_access` SET 
			 status = #status#
		WHERE ua_id = #ua_id#
	</update>
	
</sqlMap>
	